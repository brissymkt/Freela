= content_for :analysis_title
	="#{t :environmental_analysis_title}"
.row
	.col-md-12.col-lg-12.col-sm-12.col-xs-12
		table.table.table-striped.othsys-table
			thead
				tr
					th = "#{I18n.t('activerecord.attributes.environmental_analysis.year_and_month')}"
					th = "#{I18n.t('activerecord.attributes.environmental_analysis.type_of_analysis')}"
					th = "#{I18n.t('activerecord.attributes.environmental_analysis.grade')}"
					th = "#{t :actions_text}"
			tbody
				- @analyses.each do | analysis |
					tr id="#{analysis.id}"
						td.name = link_to "#{l analysis.year_and_month}", edit_user_environmental_analysis_path(analysis.id)
						td = analysis.type_to_human
						td = analysis.grade
						td 
							= link_to "#{t :destroy_environmental_analysis_link_text}", delete_user_environmental_analysis_path(analysis.id), 'data-message' => "#{t :exclusion_message}", :class => 'js-exclusion-button'
